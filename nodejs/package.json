{
    "name": "@panorama-viewer/server",
    "description": "Server of panorama-viewer application",
    "version": "1.0.1",
    "license": "MIT",
    "main": "bin/server.js",
    "author": {
        "name": "Serhii Hrynko"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ElvenMonky/PanoramaViewer.git"
    },
    "scripts": {
        "clean": "rimraf bin",
        "prepare:angular": "cd ../angular && npm run build && cd ../nodejs && copyfiles -f \"../angular/bin/*\" bin/client",
        "prepare:react": "cd ../react && npm run build && cd ../nodejs && copyfiles -f \"../react/bin/*\" bin/client",
        "start": "node bin/server.js",
        "build": "tsc && copyfiles -f \"../model/images/*\" bin/images && copyfiles -f \"../model/*.yaml\" bin/openapi"
    },
    "dependencies": {
        "express": "^4.16.2",
        "body-parser": "^1.18.2",
        "multer": "^1.3.0",
        "routing-controllers": "^0.7.6",
        "@panorama-viewer/model": "file:../model",
        "uuid": "^3.1.0"
    },
    "devDependencies": {
        "@types/node": "^6.0.87",
        "@types/express": "^4.0.39",
        "@types/body-parser": "^1.16.8",
        "@types/multer": "^1.3.6",
        "typescript": "~2.4.2",
        "copyfiles": "^1.2.0",
        "rimraf": "^2.6.2"
    }
}
