{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./bin",
        "suppressImplicitAnyIndexErrors": true,
        "noEmitOnError": true,
        "removeComments": true,
        "module": "esnext",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "bin"
    ]
}
